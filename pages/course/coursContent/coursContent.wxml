<!--pages/course/coursContent/coursContent.wxml-->
<view>
	<ccvod vid='{{detail.ccid}}' siteid='A0123BC413D6FBAE' vc='' custom_id='' videoPoster="{{'http://'+detail.coverUrl}}" />
	<view wx:if="{{detail.ifFree==1&&tradeDz.ifVip!=1}}" class="cc-video-shadow">
		<image bindtap="goVip" src="../../../img/cc-video-vip.png" mode="aspectFit"></image>
	</view>
	<view class="body">
		<view>
			<view class="pcp-nav {{scrollTop>230?'positionTop':''}}">
				<view class="inline-block pcp-nav-list {{navText=='介绍'?'pcp-nav-list-act':''}}" bindtap="navClick" data-code="1" data-text="介绍">
					介绍
					<text wx:if="{{navText=='介绍'}}" class="inline-block pcp-nav-line"></text>
				</view>
				<view class="inline-block pcp-nav-list {{navText=='评价'?'pcp-nav-list-act':''}}" bindtap="navClick" data-code="2" data-text="评价">
					评价
					<text wx:if="{{navText=='评价'}}" class="inline-block pcp-nav-line"></text>
				</view>
			</view>
			<view class="box-sizing">
				<view class="cc-head box-sizing">
					<view class="cc-head-msg">{{detail.title}} </view>
					<view>
						<view class="inline-block cc-head-img">
							<image src="{{detail.headImg}}" mode="aspectFit" class="head-img"></image>
							<text>讲师：{{detail.userName}}</text>
						</view>
						<!-- <view class="inline-block cc-head-btn">关注</view> -->
						<view wx:if="{{detail.ifFree==0}}" class="inline-block cc-head-vip">
							<image src="../../../img/cc-head-vip.png" mode="aspectFit"></image>
						</view>
					</view>
				</view>
				<view class="v1 cc-model">
					<view class="pcb-title">
						课程介绍
					</view>
					<view class="pcb-zcyw">
						<rich-text>{{detail.introduce}}</rich-text>
					</view>
				</view>
				<view class="v2 cc-model">
					<view class="pcb-title">评论 ({{detail.discussNum}})</view>
					<view>
						<view class="pcb-pl-list" wx:for="{{commentList}}" wx:for-index="commentListIndex" wx:key="index">
							<image class="pcb-pl-list-img" src="{{item.headImg}}" mode="aspectFit"></image>
							<view class="inline-block pcb-pl-list-right">
								<view class="pcb-pl-list-name">
									<text>{{item.userName}}</text>
									<view class="inline-block pcb-pl-list-name-dz">
										<image class="pcb-pl-list-name-dzimg" src="{{item.ifPrase>0?'../../../img/pcb-dz-act.png':'../../../img/pcb-dz.png'}}" mode="aspectFit" bindtap="plDz" data-index="{{commentListIndex}}" data-id="{{item.id}}" data-parse="{{item.ifPrase}}"></image>
										{{item.praiseNum}}
									</view>
								</view>
								<view wx:if="{{item.uDel!=1}}" class="pcb-pl-list-msg" bindtap="contentClick" data-id="{{item.id}}" data-name="{{item.userName}}">{{item.content}}</view>
								<view class="pcb-pl-list-date" wx:if="{{item.uDel!=1}}">{{tools.dateFormat2(item.careadate,year)}} <text wx:if="{{item.userId==userInfo.uuid}}" bindtap="delComment" data-id="{{item.id}}">·删除</text></view>
								<view class="pcb-pl-del" wx:if="{{item.uDel==1}}">
									<view class="inline-block"></view>
									<text class="inline-block">评论已删除</text>
									<view class="inline-block"></view>
								</view>
								<view class="pcb-pl-list-hf" wx:if="{{item.discussUsers!=''}}">
									<view class="pcb-pl-list-hf-trangle"></view>
									<!--  style="{{item.discussUsers.length>1&&item.zk==true?'height:auto':'height:224rpx'}}" -->
									<view class="pcb-pl-list-hf-msg box-sizing">
										<view class="pcb-pl-list" wx:for="{{item.discussUsers_change}}" wx:key="index">
											<image class="pcb-pl-list-img-hf" src="{{item.headImg}}" mode="aspectFit"></image>
											<view class="inline-block pcb-pl-list-right">
												<view class="pcb-pl-list-name">
													<view class="inline-block" style="width:85%;word-break: break-all;">
														{{item.userName}}
														<text class="green" wx:if="{{item.author==0}}">·作者</text>
														<text wx:if="{{item.level==3}}" style="color:#333;margin:0 10rpx">回复</text>
														<text wx:if="{{item.level==3}}">{{item.replyUserName}}</text>
													</view>
													<view class="inline-block pcb-pl-list-name-dz">
														<image class="pcb-pl-list-name-dzimg" src="{{item.ifPrase>0?'../../../img/pcb-dz-act.png':'../../../img/pcb-dz.png'}}" mode="aspectFit" bindtap="plDz" data-index="{{index}}" data-id="{{item.id}}" data-parse="{{item.ifPrase}}" data-type="hf" data-parentindex="{{commentListIndex}}"></image>
														{{item.praiseNum}}
													</view>
												</view>
												<view wx:if="{{item.uDel!=1}}" class="pcb-pl-list-msg" bindtap="contentClick" data-id="{{item.id}}" data-name="{{item.userName}}">{{item.content}}</view>
												<view wx:if="{{item.uDel!=1}}" class="pcb-pl-list-date">{{tools.dateFormat2(item.careadate,year)}}<text wx:if="{{item.userId==userInfo.uuid}}" bindtap="delComment" data-id="{{item.id}}">·删除</text></view>
												<view class="pcb-pl-del" wx:if="{{item.uDel==1}}">
													<view class="inline-block"></view>
													<text class="inline-block">评论已删除</text>
													<view class="inline-block"></view>
												</view>

											</view>
										</view>
										<view wx:if="{{item.discussUsers.length>1}}" class="psb-pl-list-sq" data-id="{{index}}" bindtap="sqClick" data-msg="{{item.zk==true?'收起':''}}">{{item.zk==true?'收起':'更多回复'+(item.discussUsers.length-1)}}</view>
									</view>
								</view>
							</view>
						</view>
					</view>
				</view>
			</view>
			<view class="pcb-foot">
				<view class="pcb-foot-pl box-sizing" wx:if="{{!commentInput}}">
					<input class="inline-block" placeholder="发表一下您的意见～" disabled="true" bindtap="inputClick"></input>
					<view class="inline-block pcb-foot-pl-img">
						<image src="../../../img/pcb-pl.png" mode="aspectFit"></image>
						<text class="inline-block">{{detail.discussNum}}</text>
					</view>
					<view class="inline-block pcb-foot-pl-img">
						<image src="../../../img/{{detail.ifPrase>0?'pcb-dz-act.png':'pcb-dz.png'}}" mode="aspectFit" data-parse="{{detail.ifPrase}}" bindtap="wzdzClick"></image>
						<text class="inline-block">{{detail.praiseNum}}</text>
					</view>
					<view class="inline-block pcb-foot-pl-img">
						<image src="../../../img/{{detail.ifCollect>0?'pcb-sc-act.png':'pcb-sc.png'}}" mode="aspectFit" data-collect="{{detail.ifCollect}}" bindtap="scClick"></image>
						<text class="inline-block">{{detail.collectNum}}</text>
					</view>
					<view class="inline-block pcb-foot-pl-img">
						<image src="../../../img/pcb-zf.png" mode="aspectFit"></image>
					</view>
				</view>
				<view wx:if="{{commentInput}}" class="pcb-foot-hf">
					<input class="box-sizing inline-block" bindinput="commentInput" placeholder="{{commentPlaceHolder}}"></input>
					<text class="green" bindtap="subComment">发送</text>
				</view>
			</view>
		</view>
	</view>
</view>