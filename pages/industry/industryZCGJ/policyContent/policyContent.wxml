<!--pages/industry/industryZCGJ/policyContent/policyContent.wxml-->
<wxs module="tools" src="../../../tools.wxs"></wxs>
<view class="body">
	<view class="policeContent-head">
		<view class="pch-title">{{policyContent.title}}</view>
		<view class="pch-file">[ {{policyContent.fileNum}} ]</view>
		<view class="pch-list">发文机关：{{policyContent.office}}</view>
		<view class="pch-list">税 种：{{policyContent.taxName}}</view>
		<view class="pch-list">发布时间：{{tools.dateFormat(policyContent.officialReleaseDate)}}</view>
		<view class="pch-list">政策地区：{{policyContent.region}}</view>
		<view class="pch-list">时效性：{{policyContent.timelinessid}}</view>
	</view>
	<view class="policeContent-body">
		<view class="pcp-nav {{scrollTop>230?'positionTop':''}}">
			<view class="inline-block pcp-nav-list {{navText=='政策'?'pcp-nav-list-act':''}}" bindtap="navClick" data-code="1" data-text="政策">
				政策
				<text wx:if="{{navText=='政策'}}" class="inline-block pcp-nav-line"></text>
			</view>
			<view class="inline-block pcp-nav-list {{navText=='相关文件'?'pcp-nav-list-act':''}}" bindtap="navClick" data-code="2" data-text="相关文件">
				相关文件
				<text wx:if="{{navText=='相关文件'}}" class="inline-block pcp-nav-line"></text>
			</view>
			<view class="inline-block pcp-nav-list {{navText=='相关解读'?'pcp-nav-list-act':''}}" bindtap="navClick" data-code="3" data-text="相关解读">
				相关解读
				<text wx:if="{{navText=='相关解读'}}" class="inline-block pcp-nav-line"></text>
			</view>
			<view class="inline-block pcp-nav-list {{navText=='评论'?'pcp-nav-list-act':''}}" bindtap="navClick" data-code="4" data-text="评论">
				评论
				<text wx:if="{{navText=='评论'}}" class="inline-block pcp-nav-line"></text>
			</view>
		</view>
		<view class="pcb-show box-sizing">
			<view class="v1">
				<view class="pcb-zc-head box-sizing" data-id="{{policyContent.userid}}" bindtap="zdzjClick">
					<view class="pcb-zc-head-title inline-block">指导专家</view>
					<view class="pcb-zc-head-right inline-block">
						<image src="{{policyContent.headImg}}" mode="aspectFit"></image>
						<view class="inline-block">
							<view class="pcb-zc-head-name">{{policyContent.userName}}</view>
							<view class="pcb-zc-head-position green">{{policyContent.identity==0?'普通人':(policyContent.identity==1?'专家':'讲师')}}</view>
						</view>
					</view>
				</view>
				<view class="pcb-title">
					<view class="inline-block psb-title-line"></view>
					原文
				</view>
				<view class="pcb-zcyw">
					<rich-text>{{policyContent.content}}</rich-text>
				</view>
				<!-- <view class="pcb-zcjd">
					<view class="psb-jd-title green">解读：</view>
					<view>
						房产税是以房屋为征税对象，按房屋的计税余值或租金收入为计税依据， 产权所有人征收的一种财产税。 房产税是以房屋为征税对象，按房
					</view>
				</view> -->
				<view class="pcb-zcyw-dz" wx:if="{{tradeDz.ifVip==1}}">
					<view class="pcb-zcyw-dz-btn">
						<image src="../../../../img/{{policyContent.ifPrase>0?'content_dz.png':'content_dz_no.png'}}" mode="aspectFit" data-parse="{{policyContent.ifPrase}}" bindtap="wzdzClick"></image>
					</view>
					<view class="pcb-zcyw-dz-list">
						<image wx:for="{{dzList}}" wx:key="index" src="{{item.headImg}}" mode="aspectFit"></image>
						<image wx:if="{{dzList.length==8}}" bindtap="lookDZlist" wx:key="*this" src="../../../../img/dz-list-more.png" mode="aspectFit"></image>
					</view>
				</view>
				<view class="pcb-zcyw-vip" wx:if="{{tradeDz.ifVip!=1}}">
					<image src="../../../../img/ktvip.gif"></image>
				</view>
			</view>
			<view class="v2" wx:if="{{releatfile!=''}}">
				<view class="pcb-title">相关文件</view>
				<view class="pcb-xgwj-list shadow-model box-sizing" wx:for="{{releatfile}}" wx:key="index">
					<view class="pcb-xgwj-title">{{item.title}}</view>
					<view class="pcb-xgwj-file">[ {{item.fileNum}} ]</view>
					<view>发布时间：{{tools.dateFormat(item.officialReleaseDate)}}</view>
				</view>
			</view>
			<view class="v3" wx:if="{{releatedetails!=''}}">
				<view class="pcb-title">相关解读</view>
				<view class="pcb-xgwj-list shadow-model box-sizing" wx:for="{{releatedetails}}" wx:key="index" bindtap="xgjdClick" data-id="{{item.id}}">
					<view class="pcb-xgwj-title">{{item.expertTitle}}</view>
					<view>发布时间：{{tools.dateFormat(item.createTime)}}</view>
				</view>
			</view>
			<view class="v4">
				<view class="pcb-title">评论 ({{commentList.length}})</view>
				<view>
					<view class="pcb-pl-list" wx:for="{{commentList}}" wx:for-index="commentListIndex" wx:key="index">
						<image class="pcb-pl-list-img" src="{{item.headImg}}" mode="aspectFit"></image>
						<view class="inline-block pcb-pl-list-right">
							<view class="pcb-pl-list-name">
								<text>{{item.userName}}</text>
								<view class="inline-block pcb-pl-list-name-dz">
									<image class="pcb-pl-list-name-dzimg" src="{{item.ifPrase>0?'../../../../img/pcb-dz-act.png':'../../../../img/pcb-dz.png'}}" mode="aspectFit" bindtap="plDz" data-index="{{commentListIndex}}" data-id="{{item.id}}" data-parse="{{item.ifPrase}}"></image>
									{{item.praiseNum}}
								</view>
							</view>
							<view wx:if="{{item.uDel!=1}}" class="pcb-pl-list-msg" bindtap="contentClick" data-id="{{item.id}}" data-name="{{item.userName}}">{{item.content}}</view>
							<view class="pcb-pl-list-date" wx:if="{{item.uDel!=1}}">{{tools.dateFormat2(item.careadate,year)}} <text wx:if="{{item.userId==userInfo.uuid}}" bindtap="delComment" data-id="{{item.id}}">·删除</text></view>
							<view class="pcb-pl-del" wx:if="{{item.uDel==1}}">
								<view class="inline-block"></view>
								<text class="inline-block">评论已删除</text>
								<view class="inline-block"></view>
							</view>
							<view class="pcb-pl-list-hf" wx:if="{{item.discussUsers!=''}}">
								<view class="pcb-pl-list-hf-trangle"></view>
								<!--  style="{{item.discussUsers.length>1&&item.zk==true?'height:auto':'height:224rpx'}}" -->
								<view class="pcb-pl-list-hf-msg box-sizing">
									<view class="pcb-pl-list" wx:for="{{item.discussUsers_change}}" wx:key="index">
										<image class="pcb-pl-list-img-hf" src="{{item.headImg}}" mode="aspectFit"></image>
										<view class="inline-block pcb-pl-list-right">
											<view class="pcb-pl-list-name">
												<view class="inline-block" style="width:85%;word-break: break-all;">
													{{item.userName}}
													<text class="green" wx:if="{{item.author==0}}">·作者</text>
													<text wx:if="{{item.level==3}}" style="color:#333;margin:0 10rpx">回复</text>
													<text wx:if="{{item.level==3}}">{{item.replyUserName}}</text>
												</view>
												<view class="inline-block pcb-pl-list-name-dz">
													<image class="pcb-pl-list-name-dzimg" src="{{item.ifPrase>0?'../../../../img/pcb-dz-act.png':'../../../../img/pcb-dz.png'}}" mode="aspectFit" bindtap="plDz" data-index="{{index}}" data-id="{{item.id}}" data-parse="{{item.ifPrase}}" data-type="hf" data-parentindex="{{commentListIndex}}"></image>
													{{item.praiseNum}}
												</view>
											</view>
											<view wx:if="{{item.uDel!=1}}" class="pcb-pl-list-msg" bindtap="contentClick" data-id="{{item.id}}" data-name="{{item.userName}}">{{item.content}}</view>
											<view wx:if="{{item.uDel!=1}}" class="pcb-pl-list-date">{{tools.dateFormat2(item.careadate,year)}}<text wx:if="{{item.userId==userInfo.uuid}}" bindtap="delComment" data-id="{{item.id}}">·删除</text></view>
											<view class="pcb-pl-del" wx:if="{{item.uDel==1}}">
												<view class="inline-block"></view>
												<text class="inline-block">评论已删除</text>
												<view class="inline-block"></view>
											</view>
										</view>
									</view>
									<view wx:if="{{item.discussUsers.length>1}}" class="psb-pl-list-sq" data-id="{{index}}" bindtap="sqClick" data-msg="{{item.zk==true?'收起':''}}">{{item.zk==true?'收起':'更多回复'+(item.discussUsers.length-1)}}</view>
								</view>
							</view>
						</view>
					</view>
				</view>
			</view>
		</view>
		<view class="pcb-foot">
			<view class="pcb-foot-pl box-sizing" wx:if="{{!commentInput}}">
				<input class="inline-block" placeholder="发表一下您的意见～" disabled="true" bindtap="inputClick"></input>
				<view class="inline-block pcb-foot-pl-img">
					<image src="../../../../img/pcb-pl.png" mode="aspectFit"></image>
					<text class="inline-block">999+</text>
				</view>
				<view class="inline-block pcb-foot-pl-img">
					<image src="../../../../img/{{policyContent.ifPrase>0?'pcb-dz-act.png':'pcb-dz.png'}}" mode="aspectFit" data-parse="{{policyContent.ifPrase}}" bindtap="wzdzClick"></image>
					<text class="inline-block">{{policyContent.praiseNum}}</text>
				</view>
				<view class="inline-block pcb-foot-pl-img">
					<image src="../../../../img/{{policyContent.ifCollect>0?'pcb-sc-act.png':'pcb-sc.png'}}" mode="aspectFit" data-collect="{{policyContent.ifCollect}}" bindtap="scClick"></image>
				</view>
				<view class="inline-block pcb-foot-pl-img">
					<image src="../../../../img/pcb-zf.png" mode="aspectFit"></image>
				</view>
			</view>
			<view wx:if="{{commentInput}}" class="pcb-foot-hf">
				<input class="box-sizing inline-block" bindinput="commentInput" placeholder="{{commentPlaceHolder}}"></input>
				<text class="green" bindtap="subComment">发送</text>
			</view>
		</view>
	</view>
</view>