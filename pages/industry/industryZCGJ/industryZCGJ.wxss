/* pages/industry/industryZCGJ/industryZCGJ.wxss */
@import '../../index/index.wxss';
@import "../../course/course.wxss";
.course-head{
  margin-bottom: 29rpx;
}
.green{
  font-weight: bold;
}
.course-search{
  width: 84%;
}
.index-head-card-img {
  border-radius: 20rpx;
}

.bannercontainer {
  padding: 32rpx 34rpx;
  box-sizing: border-box;
}


.page-group {
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: relative;
  top: 0;
  left: 0;
  border-bottom:1px solid rgba(238,238,238,1);
  background: #fff;
}

.page-group-position {
  position: fixed;
  z-index: 99999999;
}

.page-nav-list {
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  width: 25%;
  text-align: center;
  color: #666;
  font-size: 30rpx;
}
.nav-line{
  width:20%;
  height:3rpx;
  background:rgba(40,183,163,1);
  border:2rpx solid rgba(40,183,163,1);
  display: inline-block;
  position: absolute;
  bottom: 0;
  left:40%;
}
.page-nav-img{
  width: 21rpx;
  height: 12rpx;
  vertical-align: middle;
}
.nav-sel-mask{
  width: 100%;
  height: 100vh;
  position: absolute;
  top:102rpx;
  left:0;
  background: rgba(0,0,0,.3);
}
.index-hcm-name-msg{
  width: 80%;
}
.nav-sel{
  width: 100%;
  height:400rpx;
  background: #fff;
  padding-left:50rpx;
  font-size: 30rpx;
  overflow: auto;
  color:#666;
}
.nav-sel-h-a{
  height:auto!important;
}
.nav-opt{
  height:96prx;
  line-height: 96rpx;
  border-bottom: 1px solid #eee;
}
.goods-list{
  min-height:100vh;
  height: auto;
  background: #fff;
}
.goods-list-padding{
  padding-top:200rpx;
}
.goods-list-li{
  padding:44rpx 31rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
  color:#999;
}
.goods-list-li-title{
  font-size:32rpx;
  line-height: 49rpx;
  color:#333;
}
.goods-list-li-file{
  margin:19rpx 0 27rpx 0;
}