/* pages/industry/industryZCGJ/industryZCGJ.wxss */
@import '../../index/index.wxss';
@import "../../course/course.wxss";
.course-head{
  /* margin-bottom: 29rpx; */
  color:#fff;
}
.green{
  font-weight: bold;
}
.course-search{
  width: 84%;
  background: rgba(246,246,246,0.32);
}
.input-placeholder{
  color:#fff;
}
.index-head-card-img {
  border-radius: 20rpx;
}

.bannercontainer {
  padding: 32rpx 34rpx;
  box-sizing: border-box;
  background: #28B7A3;
}


.page-group {
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: relative;
  top: 0;
  left: 0;
  border-bottom:1px solid rgba(238,238,238,1);
  background: #fff;
}

.page-group-position {
  position: fixed;
  z-index: 99999999;
  top: 0;
  left: 0;
}

.page-nav-list {
  height: 100rpx;
  line-height: 100rpx;
  position: relative;
  width: 25%;
  text-align: center;
  color: #666;
  font-size: 30rpx;
}
.nav-line{
  width:20%;
  height:3rpx;
  background:rgba(40,183,163,1);
  border:2rpx solid rgba(40,183,163,1);
  display: inline-block;
  position: absolute;
  bottom: 0;
  left:40%;
}
.page-nav-img{
  width: 21rpx;
  height: 12rpx;
  vertical-align: middle;
}
.nav-sel-mask{
  width: 100%;
  height: 100vh;
  position: absolute;
  top:102rpx;
  left:0;
  background: rgba(0,0,0,.3);
}
.index-hcm-name-msg{
  width: 80%;
}
.nav-sel{
  width: 100%;
  height:400rpx;
  background: #fff;
  padding-left:50rpx;
  font-size: 30rpx;
  overflow: auto;
  color:#666;
}
.nav-sel-h-a{
  height:auto!important;
}
.nav-opt{
  height:96prx;
  line-height: 96rpx;
  border-bottom: 1px solid #eee;
}
.goods-list{
  min-height:100vh;
  height: auto;
  background: #fff;
}
.goods-list-padding{
  padding-top:600rpx;
}
.goods-list-li{
  padding:44rpx 31rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 26rpx;
  color:#999;
}
.goods-list-li-title{
  font-size:32rpx;
  line-height: 49rpx;
  color:#333;
}
.goods-list-li-file{
  margin:19rpx 0 27rpx 0;
}

.search-tab{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 32rpx;
  color:#666;
  background: #fff;
}
.search-tab>view{
  position: relative;
  text-align: center;
}
.search-tab>view:nth-child(1){
  margin-right: 250rpx;
}
.search-tab-line{
  width: 50%;
  height: 3rpx;
  background: #28B7A3;
  position: absolute;
  bottom: 0;
  left:25%;
}
.green{
  font-weight: bold;
}
.new-head-tab{
  width: 100%;
}
.label-list{
  padding:30rpx 20rpx;
  overflow-x: auto;
  white-space:nowrap;
  background: #fff;
}
.label-list>view{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  padding:0 34rpx;
  background: #F6F6F6;
  color:#999;
  border-radius: 30rpx;
  margin-right: 26rpx;
}
.label-list-act{
  color:#28B7A3!important;
  background: #F2FBFA!important;
}
.new-card{
  background: #FEF6E9;
  width: 683rpx;
  margin:19rpx auto 0 auto;
  padding:36rpx 23rpx;
  border-radius: 14rpx;
}
.new-card-tImg{
  width: 51rpx;
  height: 51rpx;
  border-radius: 50%;
  background: rgba(0,0,0,.3);
  line-height: 51rpx;
  text-align: center;
}
.new-card-tImg>image{
  width: 36rpx;
  height: 31rpx;
  vertical-align: middle;
  margin-top: -8rpx;
}
.new-card-name{
  font-size: 31rpx;
  color:#6F584B;
  font-weight: bold;
  vertical-align: middle;
  width: 42%;
  margin-left:10rpx;
}
.new-card-itro{
  width: 307rpx;
  height: 56rpx;
  vertical-align: middle;
}