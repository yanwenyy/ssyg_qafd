/* pages/industry/industryCustomized/industryCustomized.wxss */
@import '../../../app.wxss';
.close-mask{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top:40rpx;
  right:4%;
}
.ic-model{
  width: 92%;
  height:85%;
  background: #fff;
  border-radius:20rpx;
  position: fixed;
  top:100rpx;
  right: 4%;
  padding:0 63rpx;
}
.ic-model-title{
  font-size: 36rpx;
  color:#333;
  font-weight: bold;
  text-align: center;
  margin:48rpx 0;
}
.ic-model-intro{
  font-size: 26rpx;
  line-height: 38rpx;
  color:#999;
  margin-bottom: 61rpx;
}
.ic-model-list{
  width: 100%;
  height:50%;
}
.hyradio{
  margin-bottom: 69rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
}
.ic-model-btn{
  width: 100%;
  height:88rpx;
  line-height: 88rpx;
  background: #28B7A3;
  color:#fff;
  font-size: 32rpx;
  text-align: center;
  border-radius: 12rpx;
  margin-top: 20rpx;
}