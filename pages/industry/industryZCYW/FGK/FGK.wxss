/* pages/industry/industryZCYW/FGK/FGK.wxss */
@import "../../industryZCGJ/industryZCGJ.wxss";
.goods-list-li-title{
  line-height: 46rpx;
}
.fgk-contaner{
  height: 100vh;
  max-height: 100vh;
}
.bannercontainer{
  background: #fff;
  border-bottom: 1rpx solid #eee;
}
.course-head{
  color:#333;
}
.course-search{
  background: #F6F6F6;
}
.input-placeholder{
  color: #333;
}
.fgk-body{
  width: 100vw;
  height: 87%;
  position: relative;
}
.fgk-left{
  width: 178rpx;
  height: 100%;
  overflow-y: auto;
  background: #F1F5FC;
}
.fgk-left>view{
  width: 100%;
  min-height: 97rpx;
  padding:34rpx 25rpx;
  text-align: center;
  font-size: 28rpx;
  color:#333;
  position: relative;
}
.fgk-tax-act{
  background: #fff;
  color:#28B7A3;
}
.fkg-tax-line{
  width: 6rpx;
  height: 26rpx;
  position: absolute;
  top:38rpx;
  left:0;
  background: #28B7A3;
}
.fgk-right{
  width: 76%;
  vertical-align: top;
}
.goods-list2{
  padding:0 31rpx;
  height:68vh;
}
.page-nav-list{
  width: 33%;
}
.nav-sel-mask{
  z-index: 999;
}
.goods-list-li{
  margin:0 8rpx 29rpx 8rpx;
  margin-bottom: 29rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 16px 0px rgba(3,0,0,0.04);
  border-radius:14rpx;
}