/* pages/ask/askEvaluate/askEvaluate.wxss */
.ask-evaluate-head>image{
  width: 85rpx;
  height: 85rpx;
  vertical-align: top;
  margin-right: 19rpx;
}
.ask-evaluate-head{
  padding-bottom: 42rpx;
  border-bottom: 1px solid #eee;
}
.ask-eh-name{
  font-size: 30rpx;
  font-weight: bold;
  line-height: 40rpx;
  margin-bottom: 8rpx;
}
.ask-eh-position{
  font-size: 24rpx;
  color:#999;
}
.ask-eh-position>image{
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
  margin-top:-3rpx;
}
.ask-evaluate-title{
  font-size: 30rpx;
  color:#999;
  margin:50rpx 0 36rpx 0;
}
.ask-evaluate-star{
  text-align: center;
}
.ask-evaluate-star>image{
  width: 52rpx;
  height: 48rpx;
  margin:0 10rpx;
}
.ask-evaluate-text{
  width: 100%;
  height: 421rpx;
  background: #eee;
  border:1rpx solid rgba(238,238,238,1);
  border-radius:16rpx;
  padding:36rpx 33rpx;
  font-size: 30rpx;
  margin-top:61rpx;
}
.sub-evaluate{
  width: 100%;
  position: fixed;
  bottom:70rpx;
  left:0;
}
.sub-evaluate>view{
  width:660rpx;
  height:88rpx;
  line-height: 88rpx;
  color:#fff;
  background:rgba(40,183,163,1);
  border-radius:12rpx;
  text-align: center;
  margin:0 auto;
  font-size: 32rpx;
}