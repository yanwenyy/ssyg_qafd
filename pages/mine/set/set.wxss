/* pages/mine/set/set.wxss */
.set-body{
  padding:47rpx 36rpx;
}
.set-list{
  font-size:28rpx;
  color:#999;
  display: flex;
  justify-content: space-between;
  border-bottom:1px solid #eee;
  padding-bottom:40rpx;
  margin-bottom:36rpx;
}
.set-list-name{
  font-size:32rpx;
  color:#333;
  vertical-align: middle;
}
.set-list-name>text,.set-list-right>text{
  vertical-align: middle;
}
.set-list-name-img{
  width: 50rpx;
  height:50rpx;
  vertical-align: middle;
  margin-right: 9rpx;
}
.set-go{
  width: 15rpx;
  height:26rpx;
  vertical-align: middle;
  margin-left: 18rpx;
}
.set-shadow-body{
  padding:51rpx 46rpx;
  width:641rpx;
  height:auto;
  margin: 30% auto;
  background: #fff;
  border-radius: 16rpx;
}
.set-shadow-title{
  text-align: center;
  width:100%;
  font-size: 36rpx;
  font-weight: bold;
  position: relative;
  margin-bottom: 72rpx;
}
.set-shadow-close{
  width:40rpx;
  height:40rpx;
  position: absolute;
  top:0;
  right:0;
}
.set-shadow-input-group{
  width:100%;
  height:95rpx;
  line-height: 95rpx;
  background: #EEEEEE;
  border-radius: 16rpx;
  margin-bottom: 36rpx;
}
.set-shadow-input-group>input{
  width:68%;
  height: 100%;
  display: inline-block;
  vertical-align: top;
  font-size: 32rpx;
  padding-left:34rpx;
  box-sizing: border-box;
}
.set-shadow-input-btn{
  width: 31%;
  height:100%;
  font-size: 28rpx;
  vertical-align: top;
}
.set-shadow-input-img{
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.set-shadow-btn>button{
  background: #28B7A3;
  color:#fff;
  border:none;
  font-size:32rpx;
  margin-top:78rpx;
  height: 88rpx;
  line-height: 88rpx;
}
.set-btn{
  position: absolute;
  bottom:62rpx;
  left:0%;
  width: 100%;
}
.set-btn>button{
  background: #28B7A3;
  color:#fff;
  font-size: 32rpx;
  border:none;
  width: 91%!important;
  height: 88rpx;
  line-height: 88rpx;
}