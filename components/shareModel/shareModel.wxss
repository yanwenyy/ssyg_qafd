/* components/shareModel/shareModel.wxss */
.shadow{
  width:100%;
  height:100%;
  background: rgba(0,0,0,0.3);
  position: fixed;
  top:0;
  left:0;
  z-index: 9999
}
.inline-block {
  display: inline-block;
}
.box-sizing {
  box-sizing: border-box
}
.shadow-model {
  width: 100%;
  height: auto;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 26rpx 0px rgba(3, 0, 0, 0.05);
  border-radius: 12rpx;
}
.canvas-bg{
  padding:100rpx 78rpx;
}
.canvas{
  width:595rpx;
  height:909rpx;
  margin-bottom: 44rpx;
  border-radius: 14rpx;
}
.save-canvas{
  background: #3EC1AE;
  color:#fff;
  font-size:32rpx;
  height: 88rpx;
  line-height: 88rpx;
  width: 100%!important;
}
.share-body{
  width: 100%;
  min-height: 100vh;
  height: auto;
  position: relative;
}
.share-img-bg{
  width: 100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
  background: #eee;
}
.shadow-body{
  width: 100%;
  height:570rpx;
  padding:48rpx 44rpx;
  position: absolute;
  left:0;
  bottom:0;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  z-index: 999;
}
.shadow-title{
  text-align: center;
  width: 100%;
  position: relative;
}
.close-shadow{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top:0;
  right:0;
}
.shadow-msg{
  width: 100%;
  margin-top:117rpx;
  /* display: flex;
  justify-content: space-between; */
  text-align: center;
}
.shadow-msg-model{
  width: 144rpx;
  text-align: center;
  position: relative;
}
.shadow-msg-model:nth-child(1){
  margin-right: 159rpx;
}
.shadow-msg-model-img{
  width: 100%!important;
  height:144rpx;
  margin-bottom: 43rpx;
  vertical-align: top;
}
.shadow-msg-model-btn{
  width: 100%!important;
  height:144rpx;
  position: absolute;
  top:0;
  left:0;
}
.shadow-msg-model-btn{
  opacity: 0;
}
.share-msg-name{
  width: 100%;
  text-align: center;
}